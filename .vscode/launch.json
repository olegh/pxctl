    "version": "0.2.0",
    "configurations": [
        {
            "name": "PxCLI: Discover",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": ["discover"],
            "cwd": "${workspaceFolder}/src/pxcli",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceFolder}/src"},
            "justMyCode": true
        },
        {
            "name": "PxCLI: show continuous",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": ["show", "--continuous"],
            "cwd": "${workspaceFolder}/src/pxcli",
            "env": {"PYTHONPATH": "${workspaceFolder}/src"},
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}